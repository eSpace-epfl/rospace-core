<launch>

  <!-- Launch Epoch Clock without params (=realtime, start from now) -->
  <node pkg="epoch_clock" name="epoch_clock_sim" type="epoch_clock.py" output="screen">
   <param name="realtime_factor" value="1000" />
  </node>

  <group ns="swisscube">
    <!-- Launch SGP4 node with TLE -->
    <node pkg="sgp4_node" name="sgp4_node_swisscube" type="sgp4_node.py" output="screen">
     <param name="tle_line1" value="1 35932U 09051B   17242.83495672  .00000195  00000-0  55221-4 0  9991" />
     <param name="tle_line2" value="2 35932  98.5062  22.7182 0008099  30.5945 329.5723 14.56041441421185" />
    </node>



    <node pkg="space_sim_radar" name="radar" type="sim_radar_node.py" output="screen">
      <remap from="chaser_oe" to="/swisscube/oe" />
      <remap from="target_oe" to="/tisat1/oe" />
      <param name="transform" value ="0.40 0 0 0 0 0 1" />
    </node>



  </group>
  <group ns="tisat1">
    <!-- Launch SGP4 node with TLE -->
    <node pkg="sgp4_node" name="sgp4_node_tisat1" type="sgp4_node.py" output="screen">
     <param name="tle_line1" value="1 36799U 10035E   17243.33627900  .00000542  00000-0  61603-4 0  9991" />
     <param name="tle_line2" value="2 36799  98.0703   7.6244 0013812  81.9722 278.3062 14.90464933386974" />
    </node>
  </group>

  <!-- Launch Visualizer -->
  <node pkg="orbit_visualizer" name="visualizer" type="orbit_visualizer_node.py" output="screen">
    <remap from="oe" to="/swisscube/oe" />
    <remap from="oe2" to="/tisat1/oe" />
  </node>

</launch>
